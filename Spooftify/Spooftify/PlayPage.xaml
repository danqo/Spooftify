<Page x:Class="Spooftify.PlayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Spooftify"
      mc:Ignorable="d" 
      d:DesignHeight="630" d:DesignWidth="600"
      Title="PlayPage">

    <Page.Resources>
        <ContextMenu x:Key="playlistContextMenu">
            <MenuItem Header="Remove" Click="MenuItem_Remove_Click"/>
        </ContextMenu>
    </Page.Resources>
    
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" x:Name="PlaylistName" Content="Playlist #1" HorizontalContentAlignment="Center" Background="#1B1B1B" Foreground="LightGray" FontSize="36" FontWeight="DemiBold"/>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <Image/>
                    <Label Content="Previous Song" Foreground="White" HorizontalAlignment="Center"/>
                    <Label x:Name="prevTitle" Content="Title: " Foreground="White"/>
                    <Label x:Name="prevArtist" Content="Artist: " Foreground="White"/>
                    <Label x:Name="prevAlbum" Content="Album: " Foreground="White"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <Image/>
                    <Label Content="Current Song" Foreground="White" HorizontalAlignment="Center"/>
                    <Label x:Name="curTitle" Content="Title: " Foreground="White"/>
                    <Label x:Name="curArtist" Content="Artist: " Foreground="White"/>
                    <Label x:Name="curAlbum" Content="Album: " Foreground="White"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <Image/>
                    <Label Content="Next Song" Foreground="White" HorizontalAlignment="Center"/>
                    <Label x:Name="nextTitle" Content="Title: " Foreground="White"/>
                    <Label x:Name="nextArtist" Content="Artist: " Foreground="White"/>
                    <Label x:Name="nextAlbum" Content="Album: " Foreground="White"/>
                </StackPanel>
            </Grid>
            <StackPanel Grid.Row="1">
                <Slider Width="500">
                </Slider>
                <StackPanel Orientation="Horizontal" Margin="9,9,9,9" HorizontalAlignment="Center">
                    <Button Content="Previous" Margin="5,5,5,5"/>
                    <Button Content="Play" Margin="5,5,5,5"/>
                    <Button Content="Stop" Margin="5,5,5,5"/>
                    <Button Content="Next" Margin="5,5,5,5"/>
                </StackPanel>

            </StackPanel>
        </Grid>
        <ListBox Grid.Row="2" x:Name="SongListbox" Background="Black" MaxWidth="600" Padding="12" Margin="0,0,0,4" BorderBrush="Black" MouseRightButtonUp="SongListbox_MouseRightButtonUp" MouseDoubleClick="SongListbox_MouseDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Path=Display}" Foreground="LightGray" FontSize="24"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
